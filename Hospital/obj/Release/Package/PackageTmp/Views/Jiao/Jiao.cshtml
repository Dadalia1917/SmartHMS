
@{
    ViewBag.Title = "Jiao";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@model IEnumerable<Hospital.Models.Morder>
<style>
    .spa {
        margin: 20px;
        font-size: 15px;
    }

    .table tr td {
        text-align: center;
        vertical-align: middle;
    }

    .table tr th {
        text-align: center;
        vertical-align: middle;
    }
</style>
<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-flex align-items-center justify-content-between">
                        <h4 class="mb-0 font-size-18">缴费中心</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">缴费中心</a></li>
                                <li class="breadcrumb-item active">缴费中心</li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12 col-md-6">
                    <div class="card card-animate">
                        <div class="card-body">
                            <h4 class="card-title">缴费项目</h4>
                            <form action="/Jiao/Jiao/" method="post">
                                <input type="text" name="shen" placeholder="请输入患者身份证号" />&nbsp;<input type="submit" value="查询" class="btn btn-primary" />
                                <table class="table table-bordered table-hover" id="t1">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>编号</th>
                                            <th>患者姓名</th>
                                            <th>患者身份证</th>
                                            <th>缴费名称</th>
                                            <th>数量</th>
                                            <th>单位</th>
                                            <th>价格</th>
                                            <th>部门</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.OrderIDm</td>
                                            <td>@item.Guahao.Gname</td>
                                            <td>@item.Guahao.Gshenfenzheng</td>
                                            <td>@item.Medicine.Mname</td>
                                            <td>@item.Mshu</td>
                                            <td>@item.Medicine.Mdanwei</td>
                                            <td>@item.Medicine.Mmoneyc ￥</td>
                                            <td>@item.mhz</td>
                                            <td>
                                                <input type="button" data-toggle="modal" data-target="#qian" onclick="Jiao('@item.Mshu','@item.Medicine.Mmoneyc','@item.OrderIDm')" value="缴费" class="btn btn-danger" />
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12 col-md-6">
                    <div class="card card-animate">
                        <div class="card-body">
                            <h4 class="card-title">已缴费</h4>
                            <form action="/Jiao/Jiao/" method="post">
                                <table class="table table-bordered table-hover" id="t1">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>编号</th>
                                            <th>患者姓名</th>
                                            <th>患者身份证</th>
                                            <th>缴费名称</th>
                                            <th>数量</th>
                                            <th>单位</th>
                                            <th>价格</th>
                                            <th>部门</th>
                                            <th>状态</th>
                                        </tr>
                                    </thead>
                                    @foreach (var item in ViewBag.h)
                                    {
                                <tr>
                                    <td>@item.OrderIDm</td>
                                    <td>@item.Guahao.Gname</td>
                                    <td>@item.Guahao.Gshenfenzheng</td>
                                    <td>@item.Medicine.Mname</td>
                                    <td>@item.Mshu</td>
                                    <td>@item.Medicine.Mdanwei</td>
                                    <td>@item.Medicine.Mmoneyc ￥</td>
                                    <td>@item.mhz</td>
                                    <td style="color:red">@item.zhifu</td>
                                </tr>
                                    }
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--计算弹窗开始-->
<div class="modal" id="qian">
    <div class="modal-dialog" style="max-width:500px">
        <div class="modal-content">
            <div class="modal-header">
                <h4>该项目收费情况如下：</h4>
            </div>
            <div class="form-horizontal" enctype="multipart/form-data">
                <!-- 内容部分 -->
                <div class="modal-body">
                    <div class="form-group">
                        <label for="inputPassword3" style="width:180px;" class="col-sm-3 control-label">需缴纳总金额：</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" readonly="readonly" id="money">
                            <input type="hidden" id="biao" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" style="width:180px;" class="col-sm-3 control-label">缴纳金额：</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="money1">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" style="width:180px;" class="col-sm-3 control-label">找零：</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="money2">
                        </div>
                    </div>
                    <!-- 底部按钮-->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-info" onclick="na()" data-dismiss="modal" id="btns">确认缴纳</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">取消</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!--计算弹窗结束-->
<script>
    function Jiao(dan, mon, id) {
        var sum = dan * mon;
        $("#money").val(sum);
        $("#biao").val(id);
    };
    $(function () {
        $("#money1").click(function () {
            var q = $("#money1").val() - $("#money").val();
            $("#money2").val(q);
        })
    });
    function na() {
        $.ajax({
            url: "/Jiao/Xiu",
            data: {
                zhifu: "已支付",
                OrderIDm: $("#biao").val()
            },
            success: function (msg) {
                if (msg == "yes") {
                    alert("缴费成功！")
                    location.href = "/Jiao/Jiao";
                }
            }
        })
    }
</script>
